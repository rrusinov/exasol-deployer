{
  "description": "AWS 8-node ARM64 cluster with VXLAN networking",
  "provider": "aws",
  "db_version": "default-arm64",
  "parameters": {
    "cluster_size": 8,
    "instance_type": "t4g.xlarge",
    "data_volumes_per_node": 3,
    "data_volume_size": 20,
    "root_volume_size": 50,
    "enable_multicast_overlay": true,
    "aws_spot_instance": true
  }
}

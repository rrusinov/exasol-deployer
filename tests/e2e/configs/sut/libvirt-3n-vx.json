{
  "description": "Libvirt 3-node cluster configuration with VXLAN enabled",
  "provider": "libvirt",
  "db_version": ["default-local", "default"],
  "parameters": {
    "cluster_size": 3,
    "libvirt_memory": 8,
    "libvirt_vcpus": 4,
    "data_volumes_per_node": 3,
    "data_volume_size": 10,
    "root_volume_size": 50,
    "enable_multicast_overlay": true
  },
  "requirements": {
    "libvirt_available": true,
    "kvm_available": true,
    "min_memory_gb": 24
  }
}

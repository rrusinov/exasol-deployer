{
  "suites": {
    "libvirt-test_fix": {
      "description": "Test health check fix",
      "test_type": "workflow",
      "provider": "libvirt",
      "parameters": {
        "cluster_size": 1,
        "libvirt_memory": 4,
        "libvirt_vcpus": 2,
        "data_volumes_per_node": 1,
        "data_volume_size": 20,
        "root_volume_size": 50
      },
      "workflow": [
        {"step": "init"},
        {"step": "deploy"},
        {
          "step": "validate",
          "description": "Test health checks",
          "checks": [
            "cluster_status==database_ready",
            "health_status[*].ssh==ok"
          ]
        },
        {"step": "destroy"}
      ]
    }
  }
}
